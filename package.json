{
  "name": "xfn",
  "displayName": "xfn",
  "description": "LSP Client for the XFN language",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:xfn"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "xfn",
        "aliases": [
          "xfn"
        ],
        "extensions": [
          ".xfn"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "xfn",
        "scopeName": "source.xfn",
        "path": "./syntaxes/xfn.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "xfn",
      "properties": {
        "xfn.executable": {
          "type": "string",
          "default": "xfunc",
          "description": "Path to the xfunc executable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "format": "prettier --write '**/*.{js,json,ts,tsx,yml,yaml}'"
  },
  "dependencies": {
    "vsce": "^2.14.0",
    "vscode-languageclient": "^5.2.1"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "typescript": "^4.4.3",
    "prettier": "^2.6.2"
  }
}
